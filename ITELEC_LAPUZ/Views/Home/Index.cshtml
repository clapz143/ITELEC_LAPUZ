@{
    ViewData["Title"] = "Home Page";

    var txt = "";

    if (DateTime.Now.Hour < 12)
    {
        txt = "morning";
    }
    else if (DateTime.Now.Hour > 12 && DateTime.Now.Hour < 17)
    {
        txt = "afternoon";
    }
    else
    {
        txt = "evening";
    }
}


<div class="text-center">
    <h1 class="display-4">Welcome CICS</h1>
    <p>It is now @txt on @DateTime.Now.ToString("dddd, dd MMMM").</p>
</div>
}
